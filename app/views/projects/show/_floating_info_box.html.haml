.info-box.pull-right
  = image_tag current_project.image
  - if current_project.repo_url.present?
    = link_to current_project.repo_url do
      %i.icon-code
      %span= t('pages.show.urls.repo')
  - if current_project.demo_url.present?
    = link_to current_project.demo_url do
      %i.icon-desktop
      %span= t('pages.show.urls.demo')


  .well-small
    - if @show_statuses
      Filtering
      = link_to project_path(current_project), :class => 'btn btn-mini btn-warning' do
        Status Updates
        %i.icon-remove
    - else
      %span Only show
      = link_to project_path(current_project, :statuses => true), :class => 'btn btn-mini btn-warning' do
        Status Updates