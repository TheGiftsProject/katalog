!!! 5
%html.no-js{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %title= t('site.title')
    %meta{:name => 'description', :content => t('site.description')}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1, user-scalable=no'}
    %link{:href => '/favicon.png', :rel => 'shortcut icon'}
    = csrf_meta_tags
    = stylesheet_link_tag 'application', 'data-turbolinks-track' => true, :media => 'all'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
  %body
    - unless headless_page?
      = render 'layouts/components/header'
      = render 'layouts/components/messages'
    .container{:class => container_class }
      = yield
    - yield :bottom_javascripts
    = configure_s3_storage