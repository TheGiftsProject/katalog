%header.navbar
  .navbar-inner
    .brand
      Katalog
    %form.navbar-search
      = text_field_tag :query, nil, :placeholder => 'Search for Project or Tag', :class => 'input-long search-query'
    %ul.user-dashboard.nav.pull-right
      - if user_signed_in?
        %li.dropdown
          %a.dropdown-toggle{:href => '#', :data => {:toggle => 'dropdown'}}
            - if current_user.image.present?
              = image_tag current_user.image, :class => 'img-circle'
            %strong= current_user.nickname
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to 'Sign Out', 'sign_out'
      - else
        %li
          = link_to 'Sign In', 'sign_in'
