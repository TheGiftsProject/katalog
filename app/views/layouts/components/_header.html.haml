%nav.navbar.navbar-default{:role => 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{type: :button, data: {toggle: :collapse, target: "#navbar-collapse"}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to projects_path, class: 'navbar-brand uppercase' do
        = image_tag('logo-small.png', :class => 'logo')
        = t('site.title')

    .navbar-collapse.collapse#navbar-collapse
      %form.navbar-form.navbar-left{:role => 'search'}
        .form-group
          = text_field_tag :query, nil, :placeholder => t('layout.header.search_placeholder'), :class => 'form-control search-query', :autocomplete => :off

      %ul.nav.navbar-nav.navbar-right
        = render 'projects/index/pill', :filter => :all,    :icon => 'fa-list'
        = render 'projects/index/pill', :filter => :mine,   :icon => 'fa-child'
        = render 'projects/index/pill', :filter => :idea,   :icon => 'fa-lightbulb-o'
        = render 'projects/index/pill', :filter => :lifted, :icon => 'fa-paper-plane'
        %li.dropdown
          %a.dropdown-toggle{:href => '#', :data => {:toggle => 'dropdown'}}
            = render 'users/avatar_img', :user => current_user, :type => 'tiny'
            = current_user.nickname
            %span.caret
            %ul.dropdown-menu{:style => 'min-width: 100%;'}
              %li
                %a{:href => sign_out_path}
                  %i.fa.fa-sign-out
                  %span= t('layout.header.sign_out')