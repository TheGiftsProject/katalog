%nav.navbar.navbar-default{:role => 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{type: :button, data: {toggle: :collapse, target: "#navbar-collapse"}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to projects_path, class: 'navbar-brand uppercase' do
        = image_tag('logo-small.png', :class => 'logo')
        = t('site.title')

    .navbar-collapse.collapse#navbar-collapse
      %form.navbar-form.navbar-left.hidden-sm{:role => 'search'}
        .form-group
          = text_field_tag :query, nil, :placeholder => t('.search_placeholder'), :class => 'form-control search-query', :autocomplete => :off

      %ul.nav.navbar-nav.navbar-right
        %li.nav-pill
          = link_to projects_path do
            %i.fa.fa-fw.fa-list
            %span.uppercase= t(:all, :scope => 'layouts.header.pills')
        %li.nav-pill
          = link_to mine_projects_path do
            %i.fa.fa-fw.fa-child
            %span.uppercase= t(:mine, :scope => 'layouts.header.pills')
        %li.nav-pill
          = link_to sync_projects_path do
            %i.fa.fa-fw.fa-refresh
            %span.uppercase= t(:sync, :scope => 'layouts.header.pills')

        %li.dropdown
          %a.dropdown-toggle{:href => '#', :data => {:toggle => 'dropdown'}}
            = render 'users/avatar_img', :user => current_user, :type => 'tiny'
            = current_user.nickname
            %span.caret
            %ul.dropdown-menu{:style => 'min-width: 100%;'}
              %li
                %a{:href => sign_out_path}
                  %i.fa.fa-github
                  %span= t('.change_organization')
              %li
                %a{:href => sign_out_path}
                  %i.fa.fa-sign-out
                  %span= t('.sign_out')